#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent {
    label "alpine"
  }
  tools {
      terraform 'terraform'
    }
  
  stages {
    stage('Code Checkout from GitHub') {
      steps {
        container('alpine') {
              sh "apk add git"
              git branch: "master",
              credentialsId: "github",
              url: "git@github.com:andycockers/gcp-automation.git"
        }
            }
}

stage('Test Terraform Install') {
      steps {
        container('alpine') {
          
          sh 'terraform'
    
         
      
    }
  }
}
}
}

