#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent { kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            jenkins: build
        spec:
          containers:
          - name: rust-jenkins-agent
            image: rust:buster
            command:
            - cat
            tty: true
        """ }
  }

  stages {
    stage('Code Checkout from GitLab') {
      steps {
        container('rust-jenkins-agent') {
              git branch: "cockers",
              credentialsId: "gitlab",
              url: "git@gitlab.com:cockerill.andrew/santa-circles-api.git"
        }
            }
}

stage('Build Santa Circles API') {
      steps {
        container('rust-jenkins-agent') {
        
        sh '''apt update
              apt install musl musl-dev musl-tools -y
              #cargo run
              #rustup target add aarch64-unknown-linux-musl
              cargo rustc --bin santa-circles-api --target aarch64-unknown-linux-musl -- -C link-arg=-lgcc
              '''
      
        }
      }
    }
  }
}

