#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent { kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            jenkins: build
        spec:
          containers:
          - name: docker-jenkins-agent
            image: calmmopey/alpine-ssh:1
            command:
            - cat
            tty: true
        """ }
  }

  
  stages {

stage('Helm upgrade Jenkins') {
      steps {
        container('docker-jenkins-agent') {
        sshagent(credentials: ['hetzner-ssh-ubuntu']) {
        sh '''
        [ -d ~/.ssh ] || mkdir ~/.ssh && chmod 0700 ~/.ssh
          ssh-keyscan -t rsa,dsa blane.uk.to >> ~/.ssh/known_hosts
          ssh ubuntu@blane.uk.to
        '''
        }
      }
    }
  }
}
}

