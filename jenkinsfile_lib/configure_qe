#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent {
    kubernetes {
      yaml """
       apiVersion: v1
       kind: Pod
       metadata:
        labels:
            jenkins: build
       spec:
        containers:
        - name: worker
          image: wolfman.crabdance.com/worker-arm-buster
          command:
          - cat
          tty: true
                    
  """

    }
  }

  stages {
    

stage('SSH') {
      steps {
        container('worker') {
          withCredentials([file(credentialsId: 'hpc', variable: 'HPC')]) {
          sh "ssh -i $HPC hpc@116.203.81.151"
      }
      }
    }
  }
}
}

