#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_
def remote = [:]
remote.name = "node-1"
remote.host = "116.203.81.151"
remote.allowAnyHosts = true

pipeline {
  agent {
    kubernetes {
      yaml """
       apiVersion: v1
       kind: Pod
       metadata:
        labels:
            jenkins: build
       spec:
        containers:
        - name: worker
          image: wolfman.crabdance.com/worker-arm-buster
          command:
          - cat
          tty: true
                    
  """

    }
  }

  stages {
    stage("SSH Steps Rocks!") {
      steps{
        container('worker') {
          withCredentials([sshUserPrivateKey(credentialsId: "hpc", keyFileVariable: 'keyfile')]) {
        sh "ssh hpc@116.203.81.151"
       }
   }

      }
    


        
        
    }
}
      }


  

      
      
    
  



