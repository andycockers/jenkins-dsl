#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent { kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            jenkins: build
        spec:
          containers:
          - name: helm-jenkins-agent
            image: alpine/helm:3.10.0
            command:
            - cat
            tty: true
          - name: git-jenkins-agent
            image: alpine/git
            command:
            - cat
            tty: true
        """ }
  }

  stages {
    stage('Code Checkout from GitHub') {
      steps {
        container('git-jenkins-agent') {
              git branch: "main",
              credentialsId: "github",
              url: "git@github.com:andycockers/musical-octo-happiness.git"
        }
            }
}

stage('Do Helm things') {
      steps {
        container('helm-jenkins-agent') {
        
        sh '''
           helm package helm/*
           '''
      }
        }
      
    }

stage('Do Git Things') {
  steps {
    container('git-jenkins-agent') {
      sh '''
      git config --global --add safe.directory /home/jenkins/agent/workspace/dsl-jobs/helm-repo-shizzle
      git status
      git stash
      git add .
      git status
      git commit -m "automated commit"
      git push -u origin main
      '''
    }
  }
}
  }
}

