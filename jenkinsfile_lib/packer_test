#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent {
    kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            jenkins: build
        spec:
          containers:
          - name: packer
            image: calmmopey/alpine-python3-deps
            imagePullPolicy: Always
            command:
            - cat
            tty: true
        """
    }
  }


  stages {
    stage('Initialisation') {
      steps {
        container('packer') {
          
          packer_test()
        }
      }
    }
  }

}