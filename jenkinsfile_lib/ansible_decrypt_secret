#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent {
    label "worker" 
  }
  
  stages {
    stage('Code Checkout from GitHub') {
      steps {
        container('worker') {
              git branch: "master",
              credentialsId: "github",
              url: "git@github.com:andycockers/gcp-automation.git"
        }
            }
}

stage('Ansible Decrypt Secret') {
      steps {
        container('worker') {
          sh "ls -la"
        ansibleVault(action: 'view', input: 'ansible/roles/copy-ssh-keypair/files/hpc', vaultCredentialsId: 'ansible-vault')
      }
      }
    }
  }
}

