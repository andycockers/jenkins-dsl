#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent {
    kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            jenkins: build
        spec:
          containers:
          - name: terratest
            image: calmmopey/terratest-terraform
            imagePullPolicy: IfNotPresent
            command:
            - cat
            tty: true
        """
    }
  }

  stages {
    stage('Code Checkout from GitHub') {
      steps {
              git branch: "master",
              credentialsId: "github",
              url: "https://github.com/andycockers/kubernetes"
            }

}
  }
}