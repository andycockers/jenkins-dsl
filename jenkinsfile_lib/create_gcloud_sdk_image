#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent {
    kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            jenkins: build
        spec:
          containers:
          - name: docker-jenkins-agent
            image: calmmopey/worker-arm-alpine
            command:
            - cat
            tty: true
            volumeMounts:
            - mountPath: /var/run/docker.sock
              name: docker-sock
          volumes:
          - name: docker-sock
            hostPath:
              path: /var/run/docker.sock
        """
    }
  }

parameters {
    string(name: 'VERSION', defaultValue: '', description: 'The Gcloud CLI version')
  }

stages {
    stage('Code Checkout from GitHub') {
      steps {
        container('docker-jenkins-agent') {
              git branch: "master",
              credentialsId: "github",
              url: "git@github.com:andycockers/gcp-automation.git"
        }
            }
}

stage('Docker build image') {
      steps {
        container('docker-jenkins-agent') {
        withCredentials([string(credentialsId: 'dockerhub', variable: 'DOCKERHUB')]){
        sh '''cd dockerfiles/gcloud-sdk-alpine
              docker login -u calmmopey -p $DOCKERHUB
              docker buildx create --name container --driver docker-container
              docker buildx build --push -t calmmopey/gcloud-sdk-$VERSION --platform linux/amd64,linux/arm64 --progress=plain --builder=container -f Dockerfile-buildx .
              '''
      }
        }
      }
    }
}
}