#!/usr/bin/env groovy

/* import shared library */
@Library('jenkins-dsl')_

pipeline {
  agent { kubernetes {
      yaml """
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            jenkins: build
        spec:
          containers:
          - name: docker-jenkins-agent
            image: docker
            command:
            - cat
            tty: true
            volumeMounts:
            - mountPath: /var/run/docker.sock
              name: docker-sock
          volumes:
          - name: docker-sock
            hostPath:
              path: /var/run/docker.sock
        """ }
  }

  
  stages {
    stage('Code Checkout from GitHub') {
      steps {
        container('docker-jenkins-agent') {
              git branch: "master",
              credentialsId: "github",
              url: "git@github.com:andycockers/gcp-automation.git"
        }
            }
}

stage('Docker build image') {
      steps {
        container('docker-jenkins-agent') {
        sh '''cd dockerfiles/jenkins-plugins
              docker image build . -t calmmopey/jenkins-arm64:2.346.3-lts-${BUILD_NUMBER}
              '''
      }
      }
    }
  }
}

